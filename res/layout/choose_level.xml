<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/easyLevelButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:onClick="startGameEasy"
        android:text="@string/level_easy" />

    <Button
        android:id="@+id/mediumLevelButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easyLevelButton"
        android:layout_centerHorizontal="true"
        android:onClick="startGameMedium"
        android:text="@string/level_medium" />

    <Button
        android:id="@+id/hardLevelButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mediumLevelButton"
        android:layout_centerHorizontal="true"
        android:onClick="startGameHard"
        android:text="@string/level_hard" />

</RelativeLayout>